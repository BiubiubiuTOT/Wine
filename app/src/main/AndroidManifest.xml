<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lgh.wine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WineApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_1"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1">
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.account.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.account.RegisterActivity" />
        <activity android:name=".ui.account.LoginBySmsCodeActivity" />
        <activity android:name=".ui.account.SetPasswordActivity" />

        <meta-data
            android:name="DATABASE"
            android:value="com.lgh.wine.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.lgh.wine" />

        <activity android:name=".ui.web.WebActivity" />
        <activity android:name=".ui.product.ProductListActivity" />
        <activity android:name=".ui.product.ProductDetailActivity" />
        <activity android:name=".ui.coupon.CouponListActivity" />
        <activity android:name=".ui.product.ProductParamsActivity" />
        <activity android:name=".ui.shopping.ShoppingCartActivity" />
        <activity android:name=".ui.discover.ArticleDetailActivity"></activity>
    </application>

</manifest>