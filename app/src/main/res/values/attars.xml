<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VolumeView">
        <attr name="viewHeight" format="dimension" />
        <attr name="btnWidth" format="dimension" />
        <attr name="editWidth" format="dimension" />
        <attr name="editSize" format="dimension" />
        <attr name="btnTextSize" format="dimension" />
        <attr name="editTColor" format="color" />
        <attr name="onTextChanged" format="boolean" />
    </declare-styleable>
    <declare-styleable name="InputItemView">
        <attr name="inputItemTitle" format="string" />
        <attr name="inputItemHint" format="string" />
        <attr name="inputItemHintColor" format="color" />
        <attr name="inputItemRightArrow" format="boolean" />
        <attr name="inputItemMaxLength" format="integer" />
        <attr name="inputItemType" format="enum">
            <enum name="number" value="0" />
            <enum name="text" value="1" />
            <enum name="phone" value="2" />
            <enum name="decimal" value="3" />
        </attr>
    </declare-styleable>
</resources>